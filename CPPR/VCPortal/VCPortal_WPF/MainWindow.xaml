                    <Button x:Name="btnCloseModal" Margin="0 10 0 0" Padding="10  5" Click="OnCloseModalClick" Content="Close Modal" ></Button>
                </StackPanel>

            </Grid>
        </wpf_modal:Modal>--><!--



    </Grid>-->
</Window>
