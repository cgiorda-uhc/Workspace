<UserControl x:Class="VCPortal_WPF.UserControls.Shared.MenuItemsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VCPortal_WPF.UserControls.Shared"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">

    <Grid>

        <DockPanel Grid.Row="0">
            <telerik:RadMenu  x:Name="MainMenu" DockPanel.Dock="Top"  Width="Auto">
                <telerik:RadMenuItem Header="_Data Management">
                </telerik:RadMenuItem>
                <telerik:RadMenuSeparatorItem />
                <telerik:RadMenuItem Header="_Custom Reporting">
                </telerik:RadMenuItem>
                <telerik:RadMenuSeparatorItem />
                <telerik:RadMenuItem x:Name="Home" Header="_Home" Click="Home_Click">
                </telerik:RadMenuItem>
                <telerik:RadMenuSeparatorItem />
                <telerik:RadMenuItem x:Name="Exit" Header="_Exit" Click="Exit_Click">
                </telerik:RadMenuItem>
            </telerik:RadMenu>
        </DockPanel>

    </Grid>
</UserControl>
