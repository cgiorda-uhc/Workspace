@code {

    [CascadingParameter]
    public Error Error { get; set; }

    [Parameter]
    public bool CreateFormVisible { get; set; }

    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public EventCallback<int> IdChanged { get; set; }

    [Parameter]
